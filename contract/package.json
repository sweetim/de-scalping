{
  "name": "zksync-hardhat-template",
  "description": "A template for zkSync smart contracts development with Hardhat",
  "private": true,
  "author": "Matter Labs",
  "license": "MIT",
  "repository": "https://github.com/matter-labs/zksync-hardhat-template.git",
  "scripts": {
    "deploy:ticket-shop-factory": "hardhat deploy-zksync --script deployTicketShopFactory.ts",
    "deploy:stable-coin": "hardhat deploy-zksync --script deployStableCoin.ts",
    "deploy:all": "npm run deploy:stable-coin && npm run deploy:ticket-shop-factory",
    "interact:mint-stable-coin": "hardhat deploy-zksync --script mintStableCoin.ts",
    "interact:create-ticket-shop": "hardhat deploy-zksync --script createTicketShop.ts",
    "interact:buy-ticket-using-paymaster": "hardhat deploy-zksync --script buyTicketUsingPaymaster.ts",
    "interact:fund-paymaster": "hardhat deploy-zksync --script fundPaymaster.ts",
    "interact:all": "npm run interact:mint-stable-coin && npm run interact:create-ticket-shop",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test --network hardhat",
    "zksync:inmemory": "npx zksync-cli dev start"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync": "^1.0.0",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/uuid": "^9.0.8",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^6.9.2",
    "hardhat": "^2.12.4",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "uuid": "^9.0.1",
    "zksync-ethers": "^6.7.0"
  }
}
